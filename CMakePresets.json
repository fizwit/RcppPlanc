{
  "version": 3,
  "configurePresets": [
    {
      "name": "linux-debug",
      "displayName": "Linux Debug",
      "description": "Target the Windows Subsystem for Linux (WSL) or a remote Linux system.",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_C_COMPILER": "gcc"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "linux-release",
      "inherits": "linux-debug",
      "displayName": "Linux Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "macos-debug",
      "displayName": "macOS Debug",
      "description": "Target a macOS system.",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "environment": {
        "INCLUDE" : "$penv{INCLUDE};${workspaceFolder}/src/common;${workspaceFolder}/src/nmf;${workspaceFolder}/src/nnls;/Library/Frameworks/R.framework/Resources/include/;/Library/Frameworks/R.framework/Resources/library/Rcpp/include/;/Library/Frameworks/R.framework/Resources/library/RcppArmadillo/include/;/Library/Frameworks/R.framework/Resources/library/RcppProgress/include/;/opt/homebrew/Cellar/hdf5/1.14.1/include/"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "/usr/lib64/ccache/gcc",
        "CMAKE_C_COMPILER": "/usr/lib64/ccache/gcc"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "vendor": {
        "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
          "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
        }
      }
    },
    {
      "name": "macos-release",
      "inherits": "macos-debug",
      "displayName": "macOS Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-base",
      "description": "Target Windows with the Visual Studio development environment.",
      "hidden": true,
      "generator": "Unix Makefiles",
      "environment": {
        "PATH": "C:/rtools43/x86_64-w64-mingw32.static.posix/bin;$penv{PATH}",
        "INCLUDE": "$penv{INCLUDE};C:/rtools43/x86_64-w64-mingw32.static.posix/include"
      },
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cmakeExecutable": "C:/rtools43/x86_64-w64-mingw32.static.posix/bin/cmake.exe",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "C:/rtools43/x86_64-w64-mingw32.static.posix/bin/x86_64-w64-mingw32.static.posix-gcc.exe",
        "CMAKE_CXX_COMPILER": "C:/rtools43/x86_64-w64-mingw32.static.posix/bin/x86_64-w64-mingw32.static.posix-g++.exe",
        "CMAKE_MAKE_PROGRAM": "C:/rtools43/usr/bin/make.exe"

      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
        }
      }
    },
    {
      "name": "x64-debug",
      "displayName": "x64 Debug",
      "description": "Target Windows (64-bit) with the UCRT-linked MinGW toolchain. (Debug)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_VERBOSE_MAKEFILE":  true
      }
    },
    {
      "name": "x64-release",
      "displayName": "x64 Release",
      "description": "Target Windows (64-bit) with the UCRT-linked MinGW toolchain. (Release)",
      "inherits": "x64-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
